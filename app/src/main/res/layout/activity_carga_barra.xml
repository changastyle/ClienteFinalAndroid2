<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/gradiente_radial"
    android:weightSum="4"
    style="?android:attr/progressBarStyleHorizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvSMS"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imagenTrebol"
        android:background="@drawable/loteriarn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Desarrollado por Nicolas Grossi"
        android:id="@+id/textView24"
        android:gravity="center"
        android:padding="24dp"
        android:textColor="#ff56b53b"
        android:textSize="20dp"
        android:layout_weight="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarActivityCargaBarra"
        android:indeterminate="false"
        android:layout_above="@+id/textView24"
        android:layout_below="@+id/imagenTrebol"
        android:layout_alignRight="@+id/imagenTrebol"
        android:layout_alignEnd="@+id/imagenTrebol"
        android:layout_alignLeft="@+id/imagenTrebol"
        android:layout_alignStart="@+id/imagenTrebol"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logotecnoaccion"
        android:layout_alignTop="@+id/tvSMS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView24"
        android:layout_alignEnd="@+id/textView24"/>

</RelativeLayout>