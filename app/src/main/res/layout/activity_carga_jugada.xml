<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nicolas.testgradle.activities.ActivityInsercionApuesta"
    android:orientation="vertical"
    android:background="#fffffffa">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.40"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tv1"
                android:gravity="center"
                android:text="@string/tv1Inicial"
                android:background="@drawable/gradiente_para_botones"
                android:layout_weight="0.5"
                android:textColor="#c8000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tv2"
                android:gravity="center"
                android:background="#ffffb140"
                android:layout_weight="0.5"
                android:textColor="#c8000000"
                android:textSize="24dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/scrollView"
            android:layout_weight="0.6"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:id="@+id/but7"
                        android:layout_weight="0.33"
                        android:background="@drawable/gradiente_para_botones"
                        android:layout_margin="2dp"
                        android:textColor="#c8000000"
                        android:textSize="24dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:id="@+id/but8"
                        android:layout_weight="0.33"
                        android:background="@drawable/gradiente_para_botones"
                        android:layout_margin="2dp"
                        android:textColor="#c8000000"
                        android:textSize="24dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:id="@+id/but9"
                        android:layout_weight="0.33"
                        android:background="@drawable/gradiente_para_botones"
                        android:layout_margin="2dp"
                        android:textColor="#c8000000"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:id="@+id/but4"
                        android:layout_weight="0.33"
                        android:background="@drawable/gradiente_para_botones"
                        android:layout_margin="2dp"
                        android:textColor="#c8000000"
                        android:textSize="24dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:id="@+id/but5"
                        android:layout_weight="0.33"
                        android:background="@drawable/gradiente_para_botones"
                        android:layout_margin="2dp"
                        android:textColor="#c8000000"
                        android:textSize="24dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:id="@+id/but6"
                        android:layout_weight="0.33"
                        android:layout_margin="2dp"
                        android:background="@drawable/gradiente_para_botones"
                        android:textColor="#c8000000"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:id="@+id/but1"
                        android:layout_weight="0.33"
                        android:background="@drawable/gradiente_para_botones"
                        android:layout_margin="2dp"
                        android:textColor="#c8000000"
                        android:textSize="24dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:id="@+id/but2"
                        android:layout_weight="0.33"
                        android:background="@drawable/gradiente_para_botones"
                        android:layout_margin="2dp"
                        android:textColor="#c8000000"
                        android:textSize="24dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:id="@+id/but3"
                        android:layout_weight="0.33"
                        android:background="@drawable/gradiente_para_botones"
                        android:layout_margin="2dp"
                        android:textColor="#c8000000"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="0"
                        android:id="@+id/but0"
                        android:layout_weight="0.33"
                        android:background="@drawable/gradiente_para_botones"
                        android:textColor="#c8000000"
                        android:textSize="24dp"
                        android:layout_margin="2dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="borrar"
                        android:id="@+id/butBorrar"
                        android:layout_weight="0.66"
                        android:background="@drawable/gradiente_para_botones"
                        android:textColor="#c8000000"
                        android:textSize="24dp"
                        android:layout_margin="2dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:baselineAligned="false"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="-"
                android:id="@+id/butMenos"
                android:layout_weight="0.33"
                android:textStyle="bold"
                android:background="@drawable/gradiente_para_botones"
                android:textColor="#c8000000"
                android:textSize="36dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tvPrecio"
                android:layout_weight="0.33"
                android:gravity="center"
                android:textColor="#c8000000" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="+"
                android:id="@+id/butMas"
                android:layout_weight="0.33"
                android:textStyle="bold"
                android:background="@drawable/gradiente_para_botones"
                android:textColor="#c8000000"
                android:textSize="36dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Borrar Todo"
                android:id="@+id/butCancel"
                android:layout_weight="0.33"
                android:background="@drawable/gradiente_para_botones"
                android:hint="Cancela Jugada"
                android:layout_marginRight="2dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Cargar Otra"
                android:id="@+id/botonCargarOtra"
                android:layout_weight="0.33"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/gradiente_para_botones" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Ok"
                android:id="@+id/butOK"
                android:layout_weight="0.33"
                android:background="#ff22f205"
                android:hint="Acepta Jugada"
                android:layout_marginLeft="2dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>