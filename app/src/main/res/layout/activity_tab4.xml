<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nicolas.clientefinalandroid2.Activities.Tabs.Tab4"
    android:background="@drawable/gradiente_background">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Creditos"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:padding="12dp"
        android:layout_alignParentStart="false"
        android:gravity="center"
        android:background="@drawable/boton_naranja"
        android:autoText="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView6"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:padding="12dp"
        android:background="#fffff7f9"
        android:layout_marginTop="12dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Desarrollo: "
                android:id="@+id/textView18"
                android:gravity="center"
                android:padding="12dp"
                android:textSize="24dp"
                android:background="@drawable/gradiente_para_botones" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nicolas Grossi"
                android:id="@+id/textView20"
                android:gravity="center"
                android:padding="12dp"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:onClick="goToDeveloperWebsite" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Empresa:"
                android:id="@+id/textView22"
                android:gravity="center"
                android:padding="12dp"
                android:textSize="24dp"
                android:background="@drawable/gradiente_para_botones" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TecnoAccion S.A"
                android:id="@+id/textView23"
                android:gravity="center"
                android:padding="12dp"
                android:textSize="20dp"
                android:clickable="true"
                android:onClick="llamarATecno"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="DiseÃ±o Grafico:"
                android:id="@+id/textView19"
                android:gravity="center"
                android:padding="12dp"
                android:textSize="24dp"
                android:background="@drawable/gradiente_para_botones" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView21"
                android:gravity="center"
                android:padding="12dp"
                android:textSize="24dp"
                android:layout_gravity="center_horizontal"
                android:text="None" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
